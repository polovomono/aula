       Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        boolean continuarJogo = true;
        int acumulado = 0;
        int vitorias = 0;

        System.out.println("Bem-vindo ao jogo de adivinhação!");

       
        System.out.print("Qual é o seu nome? ");
        String nomeJogador = scanner.nextLine();

        while (continuarJogo) {
            
            System.out.println("Olá, " + nomeJogador + ". Você deseja iniciar o jogo? (Digite 'sim' para começar ou 'não' para sair): ");
            String respostaInicio = scanner.nextLine();

            if (!respostaInicio.equalsIgnoreCase("sim")) {
                break;
            }

           
            int numeroSecreto = random.nextInt(100) + 1;
            int tentativas = 0;
            boolean acertou = false;

            
            System.out.print("Informe o valor da sua aposta: ");
            int aposta = scanner.nextInt();
            scanner.nextLine(); 

            System.out.println("Estou pensando em um número entre 1 e 100... Tente adivinhar!");

            System.out.println("");
            
            while (!acertou) {
                System.out.print("Digite sua tentativa: ");
                int palpite = scanner.nextInt();
                tentativas++;

                if (palpite < numeroSecreto) {
                    System.out.println("O número é maior!");
                } else if (palpite > numeroSecreto) {
                    System.out.println("O número é menor!");
                } else {
                    acertou = true;
                    vitorias++;
                    acumulado += aposta * 2;
                    System.out.println("");
                    System.out.println("Parabéns, " + nomeJogador + "! Você acertou em " + tentativas + " tentativas.");
                    System.out.println("");
                    System.out.println("Sua aposta foi duplicada! Seu saldo acumulado agora é: R$ " + acumulado);
                }
            }

            System.out.println("");
            System.out.print("Você deseja jogar novamente? (Digite 'sim' para continuar ou 'não' para encerrar): ");
            String respostaContinuar = scanner.next();
            scanner.nextLine();  

            if (!respostaContinuar.equalsIgnoreCase("sim")) {
                continuarJogo = false;
                System.out.println("Obrigado por jogar, " + nomeJogador + "!");
                System.out.println("Você venceu " + vitorias + " vez(es) e acumulou R$ " + acumulado + ".");
            }
        }

        scanner.close();
    }
}
   
